{
    "description": "Demonstrating toolbar buttons",
    "manifest_version": 2,
    "name": "AdE Autofill",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon_16.png",
            "32": "icons/icon_32.png",
            "48": "icons/icon_32.png",
            "64": "icons/icon_64.png",
            "128": "icons/icon_128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*.google.com/*"],
            "js": ["content_script.js"]
        }
    ],
    "applications": {
        "gecko": {
            "id": "adeautofill@dtolomelli.com"
        }
    }
}