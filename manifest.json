{
    "description": "Demonstrating toolbar buttons",
    "manifest_version": 2,
    "name": "button-demo",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": ["storage"],
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16x16.png",
            "32": "icons/icon32x32.png",
            "64": "icons/icon64x64.png"
        }
    },
    "applications": {
        "gecko": {
          "id": "adeautofill@dtolomelli.com"
        }
      }
}